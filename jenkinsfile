node {
         stage ('Checkout SCM'){
                    git branch: 'master',url: 'https://github.com/deb-95-gif/Angular-Online-Bus-Ticket-Booking-System.git'
         }
         
         stage('Install node modules'){
                      sh "npm install"
         }
         stage('Build'){
                 //    sh "ng build --no-aot --no-build-optimizer --base-href ./"
                 //    sh "cp -R /dist/Angular-Online-Bus-Ticket-Booking-System/dist/   /var/lib/jenkins/workspace/angular/"
                       sh "ng build -prod"     
         }
         stage('Deploy'){
                       sh "ng serve"
         }
     }
